{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "module": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importHelpers": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "es2020"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
